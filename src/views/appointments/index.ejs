<div class="container">
    <div class="box">
        <h1 class="title is-4 has-text-centered">Lista de Citas</h1>
        <a href="/appointments/create" class="button is-link mb-4">Agregar Cita</a>
        <table class="table is-bordered is-striped is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Mascota</th>
                    <th>Dueño</th>
                    <th>Servicio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (appointments.length > 0) { %>
                    <% appointments.forEach((appointment, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= appointment.date %></td>
                            <td><%= appointment.time %></td>
                            <td><%= appointment.pet_name %></td>
                            <td><%= appointment.client_name %></td>
                            <td><%= appointment.service_name %></td>
                            <td>
                                <a href="/appointments/edit/<%= appointment.id %>" class="button is-small is-info">Editar</a>
                                <a href="/appointments/delete/<%= appointment.id %>" class="button is-small is-danger" onclick="return confirm('¿Estás seguro de eliminar esta cita?')">Eliminar</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="has-text-centered">No hay citas registradas.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
