<div class="container">
    <div class="box">
        <h1 class="title is-4 has-text-centered">Lista de Servicios</h1>
        <a href="/services/create" class="button is-link mb-4">Agregar Servicio</a>
        <table class="table is-bordered is-striped is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (services.length > 0) { %>
                    <% services.forEach((service, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= service.name %></td>
                            <td><%= service.description || "N/A" %></td>
                            <td>$<%= service.price.toFixed(2) %></td>
                            <td>
                                <a href="/services/edit/<%= service.id %>" class="button is-small is-info">Editar</a>
                                <a href="/services/delete/<%= service.id %>" class="button is-small is-danger" onclick="return confirm('¿Estás seguro de eliminar este servicio?')">Eliminar</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="has-text-centered">No hay servicios registrados.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
